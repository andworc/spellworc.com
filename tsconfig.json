{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@libs/*": ["./src/libs/*"],
      "@src/*": ["./src/*"],
      "@content/*": ["./src/content/*"],
      "@assets/*": ["./src/assets/*"],
      "@i18n/*": ["./src/i18n/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@svgs/*": ["./src/components/svgs/*"],
      "@icons/*": ["./src/components/svgs/icons/*"],
      "@styles/*": ["./src/styles/*"]
    }
  }
}
