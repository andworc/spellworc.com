---
import type { HTMLAttributes } from "astro/types";

export type Props = HTMLAttributes<"a">;
---

<a
  href={Astro.props.href}
  target="_blank"
  class="after:ml-0.5
    after:inline-block after:size-[1em] after:whitespace-nowrap after:bg-current
    after:content-[''] after:[mask-image:url(/external-link.svg)]"
  ><slot /></a
>
