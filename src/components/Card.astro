---
import Icon from "./Icon.astro";
import type Icons from "@components/Icons/Icons";

interface Props {
  icon?: keyof typeof Icons.outline;
  title: string;
  href?: string;
}

const { icon, title, href } = Astro.props;
---

<article
  class="card sl-flex rounded-xl shadow transition hover:shadow-lg dark:hover:bg-[var(--sl-color-gray-6)]"
>
  <header class="flex items-center gap-4">
    <p class="title sl-flex">
      {icon && <Icon name={icon} class="icon" size="1.5rem" />}
      {
        href ? (
          <a href={href}>
            <span set:html={title} />
          </a>
        ) : (
          <span set:html={title} />
        )
      }
    </p>
    <div class="!m-0 flex gap-2">
      <slot name="links" />
    </div>
  </header>
  <div class="body"><slot /></div>
</article>

<style>
  .card {
    --sl-card-border: var(--sl-color-purple);
    --sl-card-bg: var(--sl-color-purple-low);
    border: 1px solid var(--sl-color-gray-5);
    background-color: var(--sl-color-black);
    padding: clamp(1rem, calc(0.125rem + 3vw), 2.5rem);
    flex-direction: column;
    gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
  }

  .title {
    font-weight: 300;
    font-size: var(--sl-text-h3);
    color: var(--sl-color-white);
    line-height: var(--sl-line-height-headings);
    gap: 1rem;
    align-items: center;
  }

  .card .body {
    margin: 0;
    font-size: clamp(
      var(--sl-text-sm),
      calc(0.5rem + 1vw),
      var(--sl-text-body)
    );
  }
</style>
